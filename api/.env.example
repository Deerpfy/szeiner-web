# SZEINER Contact Form API - Environment Variables
# =================================================
# Zkopírujte tento soubor jako .env a vyplňte hodnoty

# Flask konfigurace
FLASK_ENV=development
PORT=5000

# SMTP konfigurace pro odesílání emailů
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Příjemce kontaktního formuláře
RECIPIENT_EMAIL=info@szeiner.com

# Mailchimp konfigurace (volitelné)
# Pokud není vyplněno, subscribery se ukládají lokálně do subscribers.txt
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-list-id
MAILCHIMP_SERVER=us1
